#include "libft.h"
#include <stdio.h>
#include <ctype.h>

int main(void)
{
	printf("=== Testing ft_isalpha ===\n");
	printf("ft_isalpha('a') = %d (expected: %d)\n", ft_isalpha('a'), isalpha('a'));
	printf("ft_isalpha('Z') = %d (expected: %d)\n", ft_isalpha('Z'), isalpha('Z'));
	printf("ft_isalpha('5') = %d (expected: %d)\n", ft_isalpha('5'), isalpha('5'));
	printf("ft_isalpha('@') = %d (expected: %d)\n\n", ft_isalpha('@'), isalpha('@'));

	printf("=== Testing ft_isdigit ===\n");
	printf("ft_isdigit('5') = %d (expected: %d)\n", ft_isdigit('5'), isdigit('5'));
	printf("ft_isdigit('0') = %d (expected: %d)\n", ft_isdigit('0'), isdigit('0'));
	printf("ft_isdigit('a') = %d (expected: %d)\n\n", ft_isdigit('a'), isdigit('a'));

	printf("=== Testing ft_isalnum ===\n");
	printf("ft_isalnum('a') = %d (expected: %d)\n", ft_isalnum('a'), isalnum('a'));
	printf("ft_isalnum('5') = %d (expected: %d)\n", ft_isalnum('5'), isalnum('5'));
	printf("ft_isalnum('@') = %d (expected: %d)\n\n", ft_isalnum('@'), isalnum('@'));

	printf("=== Testing ft_isascii ===\n");
	printf("ft_isascii('a') = %d (expected: %d)\n", ft_isascii('a'), isascii('a'));
	printf("ft_isascii(127) = %d (expected: %d)\n", ft_isascii(127), isascii(127));
	printf("ft_isascii(128) = %d (expected: %d)\n\n", ft_isascii(128), isascii(128));

	printf("=== Testing ft_isprint ===\n");
	printf("ft_isprint('a') = %d (expected: %d)\n", ft_isprint('a'), isprint('a'));
	printf("ft_isprint(32) = %d (expected: %d)\n", ft_isprint(32), isprint(32));
	printf("ft_isprint(31) = %d (expected: %d)\n\n", ft_isprint(31), isprint(31));

	printf("=== Testing ft_toupper ===\n");
	printf("ft_toupper('a') = %c (expected: %c)\n", ft_toupper('a'), toupper('a'));
	printf("ft_toupper('Z') = %c (expected: %c)\n", ft_toupper('Z'), toupper('Z'));
	printf("ft_toupper('5') = %c (expected: %c)\n\n", ft_toupper('5'), toupper('5'));

	printf("=== Testing ft_tolower ===\n");
	printf("ft_tolower('A') = %c (expected: %c)\n", ft_tolower('A'), tolower('A'));
	printf("ft_tolower('z') = %c (expected: %c)\n", ft_tolower('z'), tolower('z'));
	printf("ft_tolower('5') = %c (expected: %c)\n\n", ft_tolower('5'), tolower('5'));

	printf("âœ… All tests completed!\n");
	return (0);
}
